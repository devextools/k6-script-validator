{
  "branches": [
    "main"
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      { "changelogFile": "CHANGELOG.md" }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node -e \"const fs=require('fs');const p=require('./package.json');p.version='${nextRelease.version}';fs.writeFileSync('package.json', JSON.stringify(p,null,2)+'\\n');\""
      }
    ],
    [
      "@semantic-release/git",
      { "assets": ["CHANGELOG.md", "package.json"], "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}" }
    ],
    "@semantic-release/github"
  ]
}
